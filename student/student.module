function student_reg_form(&$obj) {


   //print_R($_SESSION['student']['data']->matriculation_no);
  if (!$obj['storage']['step']){
    unset($_SESSION['student']);   //----unset session of student--kniouijuhi//
	$obj['storage']['step'] = 1;
  }

  $st = $obj['storage']['step'];
  if($st == 1)
    return _student_reg_form1($obj);
  else if ($st == 2)
    return _student_reg_form2($obj);
  else if ($st == 3)
    return _student_reg_form3($obj);
  else if ($st == 4)
    return _student_reg_form4($obj);
  else if($st == 5)
		// Fee payment - to switch to entranzact, append _etranzact to the function name
    return _student_reg_form5($obj);
}

