function make_transaction($form) {
	// Get the current session_id
	$q = "SELECT session_id FROM {session} WHERE sess_name='%s'";
	$current_session = db_fetch_array(db_query($q, variable_get('veritas_current_session', '')));

  $query = "SELECT at.receipt_no FROM {admitted_transaction} at INNER JOIN {session} s ON s.session_id=at.session_id WHERE at.student_id=%d AND at.trans_type='sfee' AND s.sess_name='%s' ORDER BY transaction_id DESC";
  $result = db_query($query, $_SESSION['student']['data']->student_id, variable_get('veritas_current_session', ''));
  $data = db_result($result);
  if (!$data) {
    $update = TRUE;
    $receipt_no = "";
  }
  else {
    $update = FALSE;
    $temp_arr = explode("-", $data);
    $val = $temp_arr[1] + 1;
    $receipt_no = $temp_arr[0] ."-". $val;
  }
  $query = "select * from {payment} where refno = '%s'";
  $result = db_query($query, $form['fees']['rno']['#post']['rno']);
  $data = db_fetch_object($result);
  $query = "INSERT INTO {admitted_transaction} SET student_id=%d, receipt_no='%s', payment_code='%s', trans_amount='%s', bank_code='%s', trans_type='sfee', trans_time=now(), session_id=%d";
  db_query($query, $_SESSION['student']['data']->student_id, $receipt_no, $form['fees']['rno']['#post']['rno'], $data->cr, $form['fees']['rno']['#post']['rno'], $current_session['session_id']);
  $trid = db_last_insert_id('admitted_transaction', 'transaction_id');
  if ($update) {
    $receipt_no = vsprintf("%06d", array($trid)) ."-1";
    $query = "update {admitted_transaction} set receipt_no='%s' where transaction_id='%s'";
    $result = db_query($query, $receipt_no, $trid);
  }
  $mat_number = vsprintf("%s", array($_SESSION['student']['data']->matriculation_no)) ;
  $query = "update {payment} set paid = 1 , description = '%s' where refno = '%s'";
  $result = db_query($query, $mat_number, $form['fees']['rno']['#post']['rno']);
  return $trid;
}

