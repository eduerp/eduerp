    require_once './' . drupal_get_path('module', 'veritas') . '/student/student_eduerp_profile.inc';
    save_student_eduerp_profile($user->uid);

    profile_load_profile($user);

    $sql = "SELECT nid FROM {content_type_student_program} WHERE field_student_ref_sp_uid=%d AND field_program_ref_sp_nid=%d";
