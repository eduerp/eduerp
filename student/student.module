function student_registration_form_submit($form, &$state) {

  if ($state['storage']['step'] == 7) {
    // First determine if this student has already registered before creating records
    $q = "SELECT * FROM {admitted_student} WHERE student_id=%d";
    $rs = db_query($q, $_SESSION['student']['data']->student_id);
    $admitted_student = db_fetch_array($rs);

    // Retrieve the program abbreviation
    $q = "SELECT p.field_programme_abbr_value AS abbr FROM {content_type_program} p, {student} s WHERE p.nid=s.first_choice AND s.student_id=%d";
    $rs = db_query($q, $_SESSION['student']['data']->student_id);
    $program = db_fetch_array($rs);

    // Attempt to get the highest matno for the current session for the specified program
    $search = sprintf("VUG/%s/%s/", $program['abbr'], substr(variable_get('veritas_current_session', ''), 2, 2));
    $sql = "SELECT MAX(SUBSTRING_INDEX(matriculation_no, '/', -1)) AS last_index FROM admitted_student WHERE matriculation_no RLIKE 'VUG/[[:alpha:]]+/[[:digit:]]+/[[:digit:]]+'";
    $rs = db_query($sql);
    $row = db_fetch_array($rs);
    if ($row):
      $last_index = intval($row['last_index']);
    else:
      $last_index = 0;
    endif;

    // Increment the matno index which is the 010 in VUG/ACC/08/010 for instance
    $matindex = $last_index + 1;
    // In order to prevent regenerating the matriculation number in an event
    // that a student is refilling this form, we first check the current matriculation
    // number if it matches by prefix with the newly generated one, then we use the
    // former, if not, it is changed. Could be useful in cases where a student
    // mistakenly chose the wrong program as first choice.
    if ($admitted_student):
      $search_pattern = str_replace('/', '\/', $search);
      if (preg_match("/^$search_pattern.*/", $admitted_student['matriculation_no'])):
        $mat_number = $admitted_student['matriculation_no'];
      else:
        $mat_number = sprintf("%s%03d", $search, $matindex);
