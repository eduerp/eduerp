  }
  else
    $str  = "<b>Available Courses</b><br />";


  if (db_affected_rows($courses) <= 0) {
    $str .= Error_Types(106);
  }
  else {

  $str .= "<div id='assigned_courses'>";
    $str .= "
    <table border=1>
      <tr>
        <th><b>#</b></th>";
        if ($type == 3)
          $str .="
